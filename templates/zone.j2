$TTL	864000
@	IN 	SOA {{ dns_domain_name }}. root (
		42 ; serial
		3H ; refresh
		15M ; retry
		1W ; expiry
		1D ) ; minimum

	IN	NS ns.{{ dns_domain_name }}.

ns IN A	{{ ansible_facts.default_ipv4.address }}

{% for record in dns_records %}
{{ record.name }} IN A {{ record.ipaddress }}
{% endfor %}
